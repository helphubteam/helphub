<div class="container d-flex flex-column">
  <h2 class="align-self-center my-5">Забыли пароль?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "align-self-center w-35", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Восстановить пароль", class: "btn btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
