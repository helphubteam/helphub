<%- if controller_name != 'sessions' %>
  <%= link_to t('shared.links.enter'), new_session_path(resource_name), class: "align-self-center mt-3" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('shared.links.new_registration'), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && !%w(passwords registrations invitations).include?(controller_name) %>
  <%= link_to t('devise.passwords.new.forgot_your_password_header'), new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('shared.links.receive_confirmation'), new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('shared.links.receive_confirmation'), new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Войти через #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>