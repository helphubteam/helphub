<div class="container d-flex flex-column">
  <h2><%= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), 
    html: { class: "align-self-center w-35", method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <% if f.object.class.require_password_on_accepting %>
      <div class="field form-group">
        <%= f.label :password, 'Пароль' %><br />
        <%= f.password_field :password,  class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, 'Подтверждение пароля' %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    <% end %>

    <div class="actions form-group">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
