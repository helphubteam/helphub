<h3>Список Заявок</h3>
<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
    <th scope="col">Адрес</th>
    <th scope="col">Телефон</th>
    <th scope="col">ФИО</th>
    <th scope="col">Комментарий</th>
    <th scope="col" style="width: 10%"></th>
    </tr>
  </thead>
  <% @help_requests.each do |record| %>
    <tr>
      <td><%= record.address %></td>
      <td><%= record.phone %></td>
      <td><%= record.person %></td>
      <td><%= record.comment %></td>
      <td style="width: 10%"><%= link_to('Редактировать', edit_admin_help_request_path(record), class: 'btn btn-primary') %></td>
    </tr>
  <% end %>
</table>
<p>
  <%= link_to('Новая заявка',
    new_admin_help_request_path,
    class: 'btn btn-outline-secondary align-self-start my-3')
  %>
</p>
