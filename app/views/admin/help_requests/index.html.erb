<h3>Список Заявок</h3>
<%= render 'filters' %>
<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
    <th scope="col" style="width: 15%">Статус</th>
    <th scope="col">Адрес</th>
    <th scope="col">Телефон</th>
    <th scope="col">ФИО</th>
    <th scope="col">Комментарий</th>
    <th scope="col">Последнее изменение</th>
    <th scope="col" style="width: 10%"></th>
    </tr>
  </thead>
  <% @help_requests.each do |record| %>
    <% help_request = HelpRequestPresenter.new(record) %>
    <tr>
      <td style="width: 15%">
        <%= help_request_state_label(help_request).html_safe %>
        <div>Заявка №<%= help_request.id %></div>
      </td>
      <td><%= help_request.address %></td>
      <td><%= help_request.phone %></td>
      <td><%= help_request.person %></td>
      <td><%= help_request.comment %></td>
      <td><%= l(help_request.updated_at || help_request.created_at, format: :short) %></td>
      <td style="width: 10%"><%= link_to('Редактировать', edit_admin_help_request_path(help_request), class: 'btn btn-sm btn-outline-primary') %></td>
    </tr>
  <% end %>
</table>
<p>
  <%= link_to('Новая заявка',
    new_admin_help_request_path,
    class: 'btn btn-outline-secondary align-self-start my-3')
  %>
</p>
