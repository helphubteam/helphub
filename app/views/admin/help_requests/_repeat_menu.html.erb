<div>
  <%= f.check_box :recurring, { 'data-toggle':'collapse',
                                'data-target':'#collapsePeriod'}, true, false %> Регулярная просьба
</div>

<div class="collapse <%= 'show' unless (@help_request.recurring).blank? %>" id="collapsePeriod">
  <div class="col-sm-3">
    <div class="form-control-static"><%= f.input :period,
                                                 label: false,
                                                 input_html: { min: "1"},
                                                 placeholder: 'Повтор, дн.'%></div>
  </div>
</div>
