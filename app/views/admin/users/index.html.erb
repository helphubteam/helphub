<%= link_to('Новый пользователь',
            new_admin_user_path,
            class: 'btn btn-sm btn-success float-right my-3')
%>
<%= render 'filters', users_count: @users_count %>
<table class="table table-bordered table-hover">
  <thead class="thead-light">
  <tr>
    <th scope="col">Фамилия</th>
    <th scope="col">Имя</th>
    <th scope="col">Телефон</th>
    <th scope="col">Email</th>
    <th scope="col">Организация</th>
    <th scope="col">Роль</th>
    <th scope="col">Баллы</th>
    <th scope="col" style="width: 10%"></th>
  </tr>
  </thead>
  <% @users.each do |record| %>
    <tr>
      <td><%= record.surname %></td>
      <td><%= record.name %></td>
      <td><%= record.phone %></td>
      <td><%= record.email %></td>
      <td>
        <% if record.organization %>
          <div><%= record.organization.title %></div>
        <% else %>
          <div class="font-italic">Организация не назначена</div>
        <% end %>
      </td>
      <td><%= I18n.t(record.role, scope: [:roles]) %></td>
      <td><%= record.score %></td>
      <td style="width: 10%"><%= link_to('Редактировать', edit_admin_user_path(record), class: 'btn btn-sm btn-outline-primary') %></td>
    </tr>
  <% end %>
</table>
<%= paginate @users, theme: 'twitter-bootstrap-4' %>
