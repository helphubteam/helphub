<p><h3><%= t(".title") %></h3></p>
<%= simple_form_for [:config, :admin, @organization], wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <%= f.input :notify_if_new,
    as: @organization.config_field_input(:notify_if_new).to_sym,
    label: I18n.t("activerecord.attributes.organization.configs.notify_if_new") %>
  <div class="form-group row mb-0">
    <div class="col-sm-9">
      <%= f.submit('Сохранить', class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
