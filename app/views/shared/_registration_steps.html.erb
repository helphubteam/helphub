<% steps = { form: 1, confirm_email: 2, waiting_for_moderator: 3, good_to_go: 4 } %>
<% step ||= :form %>
<% step_number = steps[step] %>
<div class="registration-steps mb-1" style="font-size: 9px">
  <%= steps.map do |step, number|
    css = ""
    css += "color: grey;" if number <  step_number
    css += "font-weight: bold;" if number == step_number
    label = t("registration_steps.#{step}")
    "<span style='#{css}'>#{label}</span>"
  end.join(" -> ").html_safe %>
</div>
